<!DOCTYPE html>
<html lang="{{ app.request.locale }}" class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Billetterie du Louvre{% endblock %}</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous">
    {% block stylesheets %}

        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}


</head>
<body class="d-flex flex-column h-100">

<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <img src="{{ asset('img/petit-logo.png') }}" class="rounded" alt="logo Louvre">
        <a class="navbar-brand" href="{{ path('home') }}">Billetterie du louvre</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path ('order_step_1') }}">Commander</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path ('contact') }}">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path ('cgv') }}">CGV</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path ('faq') }}">FAQ</a>
                </li>

            </ul>
        </div>
    </nav>
</header>


<main class="flex-shrink-0">
    <div class="container">
        {% block body %}

        {% endblock %}
    </div>
</main>

<footer class="container-fluid mt-auto bg-light py-1">
    <div class="row">
        <div class="text-center col-md-4">
            <p class="small">Paiement sécurisé à 100%</p>
        </div>
        <div class="text-center col-md-4">
            <img src="{{ asset('img/mastercard.gif') }}" alt="logo Mastercard">
            <img src="{{ asset('img/visa.gif') }}" alt="logo visa">
            <img src="{{ asset('img/ebleue.gif') }}" alt="logo ebleue">
        </div>
        <div class="text-center col-md-4">
            <p class="small">2019 - Réalisé par ©WebInSel - P4_OpenClassrooms</p>
        </div>
    </div>

</footer>

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"
            integrity="sha384-xrRywqdh3PHs8keKZN+8zzc5TX0GRTLCcmivcbNJWm2rs5C8PRhcEn3czEjhAO9o"
            crossorigin="anonymous">
    </script>
{% endblock %}
</body>
</html>
